<h1>Annual Leave</h1>
<h3><%= link_to 'Add Annual Leave', new_holiday_path %></h3> 
<%= form_tag(holidays_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Name" %>
<%= submit_tag "Search" %>
<% end %>
<br>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>No. of Days</th>
    <th colspan="3"></th>
  </tr>
 
  <% @holidays.each do |holiday| %>
    <tr>
      <td><%= holiday.name %></td>
      <td><%= holiday.start_date %></td>
      <td><%= holiday.end_date %></td>
      <td><%= holiday.number_of_days %></td>
      <td><%= link_to 'Show', holiday_path(holiday) %></td>
      <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
      <td><%= link_to 'Destroy', holiday_path(holiday),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>