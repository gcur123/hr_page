<h1>Employee Holiday</h1>
<h3><%= link_to 'New holiday', new_holiday_path %></h3> 
<table>
  <tr>
    <th>Name</th>
    <th>Start_date</th>
    <th>End_date</th>
    <th>Number_of_days</th>
    <th colspan="3"></th>
  </tr>
 
  <% @holidays.each do |holiday| %>
    <tr>
      <td><%= holiday.name %></td>
      <td><%= holiday.start_date %></td>
      <td><%= holiday.end_date %></td>
      <td><%= holiday.number_of_days %></td>
      <td><%= link_to 'Show', holiday_path(holiday) %></td>
      <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
      <td><%= link_to 'Destroy', holiday_path(holiday),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


