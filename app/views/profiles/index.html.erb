<h1>Employee Profile</h1>
<h3><%= link_to 'Add new profile', new_profile_path %></h3> 
<%= form_tag(profiles_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Profiles" %>
<%= submit_tag "Search" %>
<% end %>
<br>
<table class="table table-hover">
<tbody>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Job Title</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th colspan="3"></th>
  </tr>
 
  <% @profiles.each do |profile| %>
    <tr>
      <td><%= profile.name %></td>
      <td><%= profile.email %></td>
      <td><%= profile.position %></td>
      <td><%= profile.start_date %></td>
      <td><%= profile.end_date %></td>
      <td><%= link_to 'Show', profile_path(profile) %></td>
      <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      <td><%= link_to 'Destroy', profile_path(profile),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
